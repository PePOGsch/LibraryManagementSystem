@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h1>Zarządzanie rolami użytkowników</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <form asp-action="AssignAdminRole" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Nadaj administratora</button>
                    </form>

                    <form asp-action="RemoveAdminRole" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Usuń administratora</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
